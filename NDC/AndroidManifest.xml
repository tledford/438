<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ido"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ido.view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ido.view.ViewAllGroupsActivity"
            android:label="@string/activity_view_all_groups_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.view.ViewAllTasksActivity"
            android:label="@string/activity_view_all_tasks_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.view.ModifyGroupActivity"
            android:label="@string/activity_modify_group_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.view.ViewTaskDetailActivity"
            android:label="@string/activity_view_task_detail_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.view.ModifyTaskActivity"
            android:label="@string/activity_modify_task_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.view.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.example.ido.view.ViewGroupTasksActivity"
            android:label="@string/activity_view_Group_tasks_String_title" >
        </activity>
        <activity
            android:name="com.example.ido.ViewAllGroupsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_all_groups"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>